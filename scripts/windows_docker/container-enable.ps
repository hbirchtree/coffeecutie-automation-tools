Enable-WindowsOptionalFeature -Online -FeatureName containers -All
Enable-WindowsOptionalFeature -Online -FeatureName Microsoft-Hyper-V -All

Install-WindowsFeature containers
Restart-Computer -Force

echo 'PowerShell -Command "Set-ExecutionPolicy Unrestricted" >> "%TEMP%\StartupLog.txt" 2>&1 PowerShell %PWD%\docker-install.ps1 >> "%TEMP%\StartupLog.txt" 2>&1' | Out-File "%USERPROFILE%/AppData/Roaming/Microsoft/Windows/Start Menu/Programs/Startup/dockerify.cmd"
